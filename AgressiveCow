import java.util.*;
import java.lang.*;

class Main
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner scanner= new Scanner(System.in);
		int t= sc.nextInt();
		while(t--){
		int nos=sc.nextInt();
		int noc= sc,nextInt();
		int[] stalls= new int[nos];
		for(int i=0;i<stalls.length;i++){
			stalls[i]=sc.nextInt();
		}
		Arrays.sort(stalls);
		System.out.println(largestMinDistance(stalls,noc);
		}
		
	}
	
	public static int largestMinDistance(int[] stalls, int noc){
		int low=0;
		int high= stalls[stalls.length-1]- stall[0];
		int ans=0;
		while(low<=high){
			int mid= low+(low+high)/2;
			if(isitpossible(stalls,mid,noc)==true){
				ans=mid;
				low=mid+1;
			}
			else high=mid-1;
		}
		return ans;
	}
	public static boolean isitpossible(int []stalls, int mid, int noc){
		int cow=1;
		int pos= stall[0];
		int i=1;
		while(i<stalls.length){
			if(stalls[i]-pos>=mid){
				cow++;
				pos= stalls[i];
			}
			if(cow>=noc) return true;
		}
		return false;
	}
}
